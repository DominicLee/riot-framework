{
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "lib": [
      "es6",
      "es2017",
      "dom",
      "scripthost"
    ],
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots" : [
      "./@types/", "./node_modules/@types/"]
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "spec"
  ]
}